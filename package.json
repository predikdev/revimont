{
  "name": "revimont-web",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev",
    "build": "astro build",
    "check:build": "astro build",
    "check:types": "astro check",
    "lint": "eslint . --ext .js,.mjs,.ts,.astro --max-warnings=0",
    "lint:fix": "eslint . --ext .js,.mjs,.ts,.astro --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky",
    "ci": "pnpm run lint && pnpm run format:check && pnpm run check:types && pnpm run check:build",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:install": "playwright install --with-deps chromium",
    "preview": "astro preview",
    "astro": "astro"
  },
  "dependencies": {
    "@astrojs/vercel": "^9.0.4",
    "@lucide/astro": "^0.563.0",
    "@tailwindcss/vite": "^4.1.18",
    "astro": "^5.16.9",
    "clsx": "^2.1.1",
    "lenis": "^1.3.17",
    "resend": "^6.9.2",
    "sharp": "^0.34.5",
    "tailwindcss": "^4.1.18",
    "vanilla-cookieconsent": "^3.1.0"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.6",
    "@axe-core/playwright": "^4.11.1",
    "@eslint/js": "^10.0.1",
    "@playwright/test": "^1.58.2",
    "eslint": "^10.0.2",
    "eslint-plugin-astro": "^1.6.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.56.1"
  },
  "lint-staged": {
    "*.{astro,js,mjs,ts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,json,md,yml,yaml}": "prettier --write"
  }
}
