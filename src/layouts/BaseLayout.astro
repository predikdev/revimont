---
import "../styles/globals.css";
import Header from "../components/layout/Header.astro";
import MobileNavigation from "../components/layout/MobileNavigation.astro";
import Footer from "../components/layout/Footer.astro";

interface Props {
  heroBackground?: string;
}

const { heroBackground } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" href="/favicon.ico" sizes="any" />
    <link rel="icon" type="image/png" href="/favicon-32x32.png" sizes="32x32" />
    <link rel="icon" type="image/png" href="/favicon-16x16.png" sizes="16x16" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />
    <meta name="viewport" content="width=device-width" />
    <meta name="robots" content="noindex,nofollow,noarchive,nosnippet" />
    <meta name="generator" content={Astro.generator} />
    <title>Revimont Klatovy</title>
  </head>
  <body class="text-black">
    <MobileNavigation />
    <Header />
    <div
      class="hero-wrapper"
      style={heroBackground
        ? `--hero-bg: url("https://images.unsplash.com/photo-1621905251189-08b45d6a269e?auto=format&fit=crop&q=80");`
        : undefined}
    >
      <slot name="hero" />
    </div>
    <main>
      <slot />
    </main>
    <Footer eyebrow="Kde nÃ¡s najdete" />
  </body>
</html>

<style>
  :global(.hero-wrapper) {
    position: relative;
    isolation: isolate;
  }

  :global(.hero-wrapper::before) {
    content: "";
    position: absolute;
    inset: 0;
    background-image: var(--hero-bg, none);
    background-size: cover;
    background-position: center;
    z-index: 0;
    pointer-events: none;
  }

  :global(.hero-wrapper::after) {
    content: "";
    position: absolute;
    inset: 0;
    background-image: linear-gradient(to right, #2a2a2a, rgba(42, 42, 42, 0.95));
    z-index: 1;
    pointer-events: none;
  }

  :global(.hero-wrapper > *) {
    position: relative;
    z-index: 2;
  }
</style>
