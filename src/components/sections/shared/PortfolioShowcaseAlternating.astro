---
import SectionWrapper from "../../ui/SectionWrapper.astro";
import SectionHeader from "../../ui/SectionHeader.astro";
import Button from "../../ui/Button.astro";

import { ChevronRight } from "@lucide/astro";

import Prace01 from "../../../assets/images/el_prace_1.jpeg";
import Prace02 from "../../../assets/images/el_prace_2.jpeg";
import Prace03 from "../../../assets/images/el_prace_3.jpeg";

interface Props {
  title?: string;
  eyebrow?: string;
}

const { title = "Ukázky našich elektroinstalací", eyebrow = "Portfolio" } = Astro.props;

const projects = [
  {
    title: "Elektroinstalace haly",
    description:
      "Realizace elektroinstalace v průmyslovém prostoru, kde se řeší hlavně rychlost, bezpečnost a přesnost provedení. Probíhala montáž vedení a příprava rozvodů ve výšce tak, aby navazující části instalace šly napojit bez zdržení. Důraz byl na čistou trasu, logické vedení a funkční předání bez improvizací.",
    meta: "Klatovy",
    image: Prace02.src,
    href: "/reference/projekt-1",
  },
  {
    title: "Revize a servis",
    description:
      "U tohoto projektu šlo o kontrolu a úpravu rozvaděče, aby byl přehledný a hlavně bezpečný. Byly prověřené okruhy, jištění a funkce ochranných prvků, a doplněno vše, co bylo potřeba pro spolehlivý provoz. Výsledkem je čisté a srozumitelné řešení, které se dá bez problémů servisovat i do budoucna.",
    meta: "Sušice",
    image: Prace01.src,
    href: "/reference/projekt-2",
  },
  {
    title: "Příprava venkovního rozvaděče",
    description:
      "Tady je vidět příprava venkovního rozvaděče před finálním dokončením. Osazení prvků, svorkování a hlavně pečlivé značení vodičů, aby bylo zapojení jasné a bez chyb i při dalších krocích na stavbě. Cíl je jednoduchý: aby připojení a následný servis byly rychlé, bezpečné a bez překvapení.",
    meta: "Železná Ruda",
    image: Prace03.src,
    href: "/reference/projekt-3",
  },
];
---

<SectionWrapper background="light" withGrid>
  <div class="mb-12 lg:mb-14">
    <SectionHeader eyebrow={eyebrow} title={title} class="mb-0" background="light" />
  </div>

  <div class="flex w-full flex-col gap-14 lg:gap-24">
    {
      projects.map((project, index) => (
        <article>
          <div class="grid items-center gap-8 md:grid-cols-[minmax(0,0.9fr)_minmax(0,1.1fr)] md:gap-10">
            <a
              href={project.href}
              class:list={["relative block", index === 1 ? "md:order-2" : "md:order-1"]}
            >
              <div class="relative h-64 overflow-hidden rounded-xl md:h-72 lg:h-80">
                <img
                  src={project.image}
                  alt={project.title}
                  class="h-full w-full object-cover"
                  loading="lazy"
                />
                <div class="pointer-events-none absolute inset-0 bg-linear-to-t from-neutral-900/35 via-transparent to-transparent" />
              </div>
            </a>

            <div class:list={["max-w-xl", index === 1 ? "md:order-1" : "md:order-2"]}>
              <h3 class="font-sora text-4xl leading-tight font-bold text-neutral-800">{project.title}</h3>
              <p class="mt-3 text-sm font-semibold text-accent-primary">{project.meta}</p>
              <p class="mt-5 text-base leading-relaxed text-neutral-800/70">{project.description}</p>

              <div class="mt-6">
                <Button
                  href={project.href}
                  variant="secondaryLight"
                  size="md"
                  class="w-fit px-5 py-2.5"
                >
                  Detail projektu
                  <ChevronRight class="h-4 w-4" />
                </Button>
              </div>
            </div>
          </div>
        </article>
      ))
    }
  </div>
</SectionWrapper>
