---
import electricImage from "../../../assets/images/electric.jpg";

interface HeroLink {
  label: string;
  href: string;
}

interface Props {
  id?: string;
  slot?: string;
  eyebrow?: string;
  title?: string;
  titleHtml?: string;
  description?: string;
  link?: HeroLink;
  backgroundImageSrc?: string;
  backgroundImageAlt?: string;
}

const {
  id = "page-hero-services-new",
  slot,
  eyebrow = "SLUZBY",
  title = "Elektroinstalace",
  titleHtml,
  description = "",
  backgroundImageSrc = electricImage.src,
  backgroundImageAlt = "Moderni elektroinstalace s prehledem namerenych hodnot",
} = Astro.props;
---

<section
  slot={slot}
  id={id}
  class="relative isolate overflow-hidden bg-neutral-800 pt-16 pb-20 lg:pt-24 lg:pb-24"
>
  <div class="absolute inset-0">
    <img
      src={backgroundImageSrc}
      alt={backgroundImageAlt}
      class="h-full w-full object-cover object-center"
      loading="lazy"
    />
  </div>

  <div
    class="absolute inset-0 bg-gradient-to-r from-neutral-800/95 via-neutral-800/80 to-neutral-800/95"
  >
  </div>
  <div
    class="absolute inset-0 bg-gradient-to-b from-neutral-800/55 via-transparent to-neutral-800/80"
  >
  </div>
  <div class="absolute inset-0 bg-neutral-800/40"></div>
  <div class="mask-image-gradient absolute inset-0 bg-grid-pattern-dark opacity-25"></div>

  <div
    class="pointer-events-none absolute inset-x-0 top-0 h-28 bg-gradient-to-b from-neutral-800/65 to-transparent"
    aria-hidden="true"
  >
  </div>

  <div class="relative z-10 mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div
      class="grid min-h-[400px] items-end gap-5 pb-2 sm:gap-8 lg:min-h-[470px] lg:grid-cols-[minmax(0,1.2fr)_minmax(0,0.8fr)] lg:gap-20"
    >
      <div class="max-w-2xl">
        <p class="text-[11px] font-bold uppercase tracking-[0.38em] text-accent-primary/95">
          {eyebrow}
        </p>

        {
          titleHtml ? (
            <h1
              class="mt-5 font-sora text-3xl leading-none font-semibold tracking-tight text-neutral-50 drop-shadow-lg sm:text-5xl lg:text-6xl"
              set:html={titleHtml}
            />
          ) : (
            <h1 class="mt-5 font-sora text-3xl leading-none font-semibold tracking-tight text-neutral-50 drop-shadow-lg sm:text-5xl lg:text-6xl">
              {title}
            </h1>
          )
        }
      </div>

      <div class="max-w-md lg:ml-auto lg:pb-5">
        <p
          class="text-base leading-relaxed text-neutral-300 drop-shadow sm:text-lg"
        >
          {description}
        </p>
      </div>
    </div>
  </div>
</section>
