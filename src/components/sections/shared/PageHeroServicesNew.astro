---
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";
import electricImage from "../../../assets/images/electric.jpg";

interface HeroLink {
  label: string;
  href: string;
}

interface Props {
  id?: string;
  slot?: string;
  eyebrow?: string;
  title?: string;
  titleHtml?: string;
  description?: string;
  link?: HeroLink;
  backgroundImage?: ImageMetadata;
  backgroundImageAlt?: string;
}

const {
  id = "page-hero-services-new",
  slot,
  eyebrow = "SLUZBY",
  title = "Elektroinstalace",
  titleHtml,
  description = "",
  backgroundImage = electricImage,
  backgroundImageAlt = "Moderní elektroinstalace s přehledem naměřených hodnot",
} = Astro.props;
---

<section
  slot={slot}
  id={id}
  class="relative isolate overflow-hidden bg-neutral-800 pt-24 pb-20 lg:pt-32 lg:pb-24"
>
  <div class="absolute inset-0">
    <Image
      src={backgroundImage}
      alt={backgroundImageAlt}
      widths={[640, 1024, 1280, 1920]}
      sizes="100vw"
      class="h-full w-full object-cover object-center"
      loading="eager"
      fetchpriority="high"
      quality={80}
    />
  </div>

  <div
    class="absolute inset-0 bg-gradient-to-r from-neutral-800/95 via-neutral-800/80 to-neutral-800/95"
  >
  </div>
  <div
    class="absolute inset-0 bg-gradient-to-b from-neutral-800/55 via-transparent to-neutral-800/80"
  >
  </div>
  <div class="absolute inset-0 bg-neutral-800/40"></div>
  <div
    class="mask-image-gradient bg-grid-pattern-dark absolute inset-0 opacity-25"
  >
  </div>

  <div
    class="pointer-events-none absolute inset-x-0 top-0 h-28 bg-gradient-to-b from-neutral-800/65 to-transparent"
    aria-hidden="true"
  >
  </div>

  <div class="relative z-10 mx-auto max-w-7xl px-4">
    <div
      class="grid items-end gap-8 pb-2 lg:min-h-[470px] lg:grid-cols-[minmax(0,1.2fr)_minmax(0,0.8fr)] lg:gap-20"
    >
      <div>
        <p
          class="animate-fade-up text-accent-primary/95 mb-10 text-[11px] font-bold tracking-[0.38em] uppercase"
        >
          {eyebrow}
        </p>

        {
          titleHtml ? (
            <h1
              class="animate-fade-up animate-delay-100 font-sora mt-8 text-4xl leading-none font-semibold tracking-tight text-neutral-50 drop-shadow-lg sm:text-5xl lg:text-6xl"
              set:html={titleHtml}
            />
          ) : (
            <h1 class="animate-fade-up animate-delay-100 font-sora mt-8 text-4xl leading-none font-semibold tracking-tight text-neutral-50 drop-shadow-lg sm:text-5xl lg:text-6xl">
              {title}
            </h1>
          )
        }
      </div>

      <div class="lg:ml-auto lg:pb-5">
        <p
          class="animate-fade-up animate-delay-200 text-base leading-relaxed text-neutral-300 drop-shadow sm:text-lg"
        >
          {description}
        </p>
      </div>
    </div>
  </div>
</section>
