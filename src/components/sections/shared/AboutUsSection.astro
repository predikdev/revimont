---
import { Image } from "astro:assets";

import SectionWrapper from "../../ui/SectionWrapper.astro";
import SectionHeader from "../../ui/SectionHeader.astro";

import { Award, Clock, BadgeCheck } from "@lucide/astro";
import FirmaImage from "../../../assets/images/firma.jpeg";

interface Props {
  id?: string;
}

const { id = "about-us" } = Astro.props;

const highlights = [
  {
    icon: Award,
    title: "Certifikovaní odborníci",
    description:
      "Všichni naši technici jsou držiteli platných certifikátů a pravidelně si doplňují vzdělání v oboru.",
  },
  {
    icon: Clock,
    title: "Rychlý a spolehlivý servis",
    description:
      "Garantujeme rychlou odezvu a dodržení dohodnutých termínů. V případě havárie jsme k dispozici do 2 hodin.",
  },
  {
    icon: BadgeCheck,
    title: "Záruka kvality",
    description:
      "Na všechny naše práce poskytujeme záruku. Používáme pouze ověřené materiály od renomovaných výrobců.",
  },
];

const stats = [
  { value: "15+", label: "Let zkušeností" },
  { value: "300+", label: "Dokončených projektů" },
  { value: "100%", label: "Funkčnost" },
  { value: "Klatovy", label: "A široké okolí" },
];
---

<SectionWrapper id={id} background="light" withGrid>
  <div class="space-y-14 lg:space-y-16">
    <SectionHeader
      eyebrow="O společnosti"
      title="Profesionalita podložená zkušenostmi"
      description="Jsme tým zkušených elektrikářů s více než 15letou praxí v oboru. Naše práce stojí na kvalitě, spolehlivosti a individuálním přístupu ke každému zákazníkovi."
      background="light"
      descWidth="narrow"
      class="mb-16"
    />

    <div class="grid items-center gap-10 lg:grid-cols-2 lg:gap-12 mb-16">
      <div class="overflow-hidden rounded-lg border border-neutral-300/70">
        <Image
          src={FirmaImage}
          alt="Elektrotechnik při práci na vedení"
          widths={[400, 800, 1200]}
          sizes="(min-width: 1024px) 50vw, 100vw"
          class="h-full w-full object-cover"
          loading="lazy"
          quality={80}
        />
      </div>

      <div class="space-y-12">
        {
          highlights.map((item) => (
            <article class="flex items-start gap-4">
              <div aria-hidden="true" class="mt-0.5 flex h-12 w-12 shrink-0 items-center justify-center rounded-lg bg-accent-primary/10 text-accent-primary">
                <item.icon class="h-6 w-6" />
              </div>

              <div>
                <h3 class="font-sora text-lg font-semibold leading-tight text-neutral-800">
                  {item.title}
                </h3>
                <p class="mt-2 text-base leading-relaxed text-neutral-800/60">{item.description}</p>
              </div>
            </article>
          ))
        }
      </div>
    </div>

    <div class="mt-10 border-t border-neutral-200 pt-8">
      <div class="grid w-full grid-cols-2 gap-x-4 gap-y-8 sm:grid-cols-4 md:gap-x-8">
        {
          stats.map((stat, index) => (
            <div
              class:list={["flex flex-col", index > 0 && "md:border-l md:border-neutral-200 md:pl-8"]}
            >
              <span class="font-sora text-2xl font-bold text-accent-primary sm:text-3xl">
                {stat.value}
              </span>
              <span class="text-xs font-semibold tracking-wide uppercase text-neutral-500">
                {stat.label}
              </span>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</SectionWrapper>
