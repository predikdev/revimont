---
import { Phone, Mail, Building2 } from "@lucide/astro";

interface Props {
  showCompanyIds?: boolean;
  ico?: string;
  dic?: string;
}

const {
  showCompanyIds = false,
  ico = "12345678",
  dic = "CZ12345678",
} = Astro.props;
---

<section data-animate-section class="relative bg-background py-10 overflow-hidden">
  <div class="absolute inset-0 bg-grid-pattern" aria-hidden="true"></div>

  <div class="container relative z-10">
    <!-- Section Header -->
    <div class="mb-14">
      <div class="flex items-center gap-3 mb-4">
        <span class="w-6 h-0.5 bg-accent-primary" aria-hidden="true"></span>
        <span class="uppercase text-accent-primary text-sm font-semibold tracking-widest">Kontakt</span>
      </div>
      <h2 class="text-heading font-sora font-bold text-neutral-900 leading-heading mb-6">
        Ozvěte se nám —<br />rádi pomůžeme
      </h2>
      <p class="text-body text-neutral-600 leading-body max-w-lg">
        Máte dotaz, potřebujete nacenit zakázku nebo si domluvit termín? Napište nám
        nebo zavolejte — odpovídáme do 24 hodin.
      </p>
    </div>

    <!-- Two-column layout -->
    <div class="grid lg:grid-cols-[3fr_2fr] gap-8 items-start">
      <!-- Left: Contact Form Card -->
      <div class="bg-white rounded-lg border border-neutral-200 p-8 shadow-sm">
        <h3 class="text-xl font-bold text-neutral-900 mb-6">Napište nám</h3>

        <form class="space-y-5" novalidate>
          <div class="grid sm:grid-cols-2 gap-4">
            <div>
              <label for="contact-name" class="block text-sm font-medium text-neutral-700 mb-1.5">
                Jméno a příjmení <span class="text-accent-primary" aria-hidden="true">*</span>
              </label>
              <input
                type="text"
                id="contact-name"
                name="name"
                placeholder="Jan Novák"
                autocomplete="name"
                required
                aria-required="true"
                class="w-full px-4 py-3 bg-white border border-neutral-200 rounded-lg text-sm text-neutral-900 placeholder:text-neutral-400 focus:outline-none focus:ring-2 focus:ring-accent-primary/25 focus:border-accent-primary transition-all"
              />
            </div>

            <div>
              <label for="contact-phone" class="block text-sm font-medium text-neutral-700 mb-1.5">
                Telefon
              </label>
              <input
                type="tel"
                id="contact-phone"
                name="phone"
                placeholder="+420 123 456 789"
                autocomplete="tel"
                class="w-full px-4 py-3 bg-white border border-neutral-200 rounded-lg text-sm text-neutral-900 placeholder:text-neutral-400 focus:outline-none focus:ring-2 focus:ring-accent-primary/25 focus:border-accent-primary transition-all"
              />
            </div>
          </div>

          <div>
            <label for="contact-email" class="block text-sm font-medium text-neutral-700 mb-1.5">
              E-mail <span class="text-accent-primary" aria-hidden="true">*</span>
            </label>
            <input
              type="email"
              id="contact-email"
              name="email"
              placeholder="jan.novak@email.cz"
              autocomplete="email"
              required
              aria-required="true"
              class="w-full px-4 py-3 bg-white border border-neutral-200 rounded-lg text-sm text-neutral-900 placeholder:text-neutral-400 focus:outline-none focus:ring-2 focus:ring-accent-primary/25 focus:border-accent-primary transition-all"
            />
          </div>

          <div>
            <label for="contact-message" class="block text-sm font-medium text-neutral-700 mb-1.5">
              Zpráva <span class="text-accent-primary" aria-hidden="true">*</span>
            </label>
            <textarea
              id="contact-message"
              name="message"
              rows="5"
              placeholder="Popište váš požadavek nebo dotaz..."
              required
              aria-required="true"
              class="w-full px-4 py-3 bg-white border border-neutral-200 rounded-lg text-sm text-neutral-900 placeholder:text-neutral-400 focus:outline-none focus:ring-2 focus:ring-accent-primary/25 focus:border-accent-primary transition-all resize-none"
            ></textarea>
          </div>

          <button
            type="submit"
            class="w-full py-4 px-6 bg-accent-primary text-white font-semibold text-sm rounded-lg flex items-center justify-center gap-2 hover:brightness-110 active:scale-[0.99] transition-all duration-200 cursor-pointer"
          >
            Odeslat zprávu &nbsp;→
          </button>
        </form>
      </div>

      <!-- Right: Contact Info Cards -->
      <div class="space-y-3">
        <a
          href="tel:+420775736112"
          aria-label="Zavolejte nám: +420 775 736 112"
          class="group bg-white rounded-lg border border-neutral-200 p-5 flex items-center gap-4 shadow-sm transition-all duration-200 hover:border-neutral-300 hover:shadow-md"
        >
          <div class="shrink-0 w-12 h-12 bg-accent-primary/10 rounded-full flex items-center justify-center transition-colors duration-300 group-hover:bg-accent-primary/[0.16]" aria-hidden="true">
            <Phone class="w-5 h-5 text-accent-primary" />
          </div>
          <div class="block">
            <p class="text-xs uppercase font-semibold tracking-widest text-neutral-500 mb-0.5 transition-colors group-hover:text-accent-primary">
              Telefon
            </p>
            <p class="text-neutral-900 font-bold transition-colors group-hover:text-accent-primary">
              +420 775 736 112
            </p>
          </div>
        </a>

        <a
          href="mailto:info@revimont.cz"
          aria-label="Napište nám: info@revimont.cz"
          class="group bg-white rounded-lg border border-neutral-200 p-5 flex items-center gap-4 shadow-sm transition-all duration-200 hover:border-neutral-300 hover:shadow-md"
        >
          <div class="shrink-0 w-12 h-12 bg-accent-primary/10 rounded-full flex items-center justify-center transition-colors duration-300 group-hover:bg-accent-primary/[0.16]" aria-hidden="true">
            <Mail class="w-5 h-5 text-accent-primary" />
          </div>
          <div class="block">
            <p class="text-xs uppercase font-semibold tracking-widest text-neutral-500 mb-0.5 transition-colors group-hover:text-accent-primary">
              E-mail
            </p>
            <p class="text-neutral-900 font-bold transition-colors group-hover:text-accent-primary">
              info@revimont.cz
            </p>
          </div>
        </a>

        {showCompanyIds && (
          <div class="group bg-white rounded-lg border border-neutral-200 p-5 flex items-start gap-4 shadow-sm transition-all duration-200 hover:border-neutral-300 hover:shadow-md">
            <div
              class="shrink-0 w-12 h-12 bg-accent-primary/10 rounded-full flex items-center justify-center transition-colors duration-300 group-hover:bg-accent-primary/[0.16]"
              aria-hidden="true"
            >
              <Building2 class="w-5 h-5 text-accent-primary" />
            </div>
            <div>
              <p class="text-xs uppercase font-semibold tracking-widest text-neutral-500 mb-1">
                Fakturační údaje
              </p>
              <div class="space-y-1">
                <p class="text-sm text-neutral-600">
                  <span class="font-semibold text-neutral-900">IČO:</span> {ico}
                </p>
                <p class="text-sm text-neutral-600">
                  <span class="font-semibold text-neutral-900">DIČ:</span> {dic}
                </p>
              </div>
            </div>
          </div>
        )}

      </div>
    </div>
  </div>
</section>
