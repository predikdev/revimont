---
import SectionWrapper from "../../ui/SectionWrapper.astro";
import { House, Grid2X2, Zap, LayoutList, CircleCheck } from "@lucide/astro";

const services = [
  {
    number: "01",
    title: "Rodinné domy a byty",
    description:
      "Kompletní elektroinstalace pro novostavby i rekonstrukce. Navrhujeme a realizujeme řešení přizpůsobená modernímu bydlení.",
    icon: House,
    bullets: [
      "Novostavby na klíč",
      "Rekonstrukce jádra",
      "Smart Home",
      "Hromosvody",
    ],
  },
  {
    number: "02",
    title: "Bytové domy a SVJ",
    description:
      "Elektro revize a instalace v panelových a bytových domech. Výměna stoupaček HDV, modernizace osvětlení a další.",
    icon: Grid2X2,
    bullets: [
      "Výměna HDV",
      "Renovace společných prostor",
      "Zámecké kabeláže",
      "Společné prostory",
    ],
  },
  {
    number: "03",
    title: "Elektrické přípojky",
    description:
      "Připojení pozemků a objektů k distribuční síti EGD, E.ON. Provedeme výkopy a osadíme pilíř.",
    icon: Zap,
    bullets: [
      "Přípojkové skříně",
      "Elektroměrový proud",
      "Zemní práce",
      "Přísliby a odložky",
    ],
  },
  {
    number: "04",
    title: "Rozvaděče",
    description:
      "Distribuce a zapouzdřená rozvaděče na míru. Od malých bytových skříní po velké technologické rozvaděče.",
    icon: LayoutList,
    bullets: [
      "Bytové rozvaděče",
      "Elektrické stojky",
      "Rozvaděče strojní měření",
      "Průmysl",
    ],
  },
];
---

<SectionWrapper background="light" withGrid class="bg-background">
  {/* Header */}
  <div class="mb-12">
    <div class="mb-4 flex items-center gap-3">
      <span class="bg-accent-primary h-px w-8" aria-hidden="true"></span>
      <p
        class="text-accent-primary text-sm font-semibold tracking-widest uppercase"
      >
        Naše služby
      </p>
    </div>
    <h2
      class="font-sora mb-5 text-4xl leading-tight font-bold text-neutral-800 sm:text-5xl lg:text-6xl"
    >
      Elektroinstalace
    </h2>
    <p class="max-w-xl text-base leading-relaxed text-neutral-800/70">
      Elektroinstalace, revize i montáže technologií zajistíme pro domácnosti,
      bytové domy i firmy. Nabízíme spolehlivá řešení od návrhu až po realizaci
      a záruční servis.
    </p>
  </div>

  {/* 2×2 grid */}
  <div class="grid gap-4 sm:grid-cols-2">
    {
      services.map((service) => {
        const ServiceIcon = service.icon;
        return (
          <div class="group relative flex flex-col overflow-hidden rounded-xl border border-neutral-200 bg-white p-8 shadow-sm transition-shadow duration-200 hover:shadow-md">
            {/* Hover accent line – slides in from left */}
            <span
              aria-hidden="true"
              class="bg-accent-primary absolute top-0 left-1/2 h-[3px] w-4/5 -translate-x-1/2 opacity-0 transition-opacity duration-300 group-hover:opacity-100"
            />

            {/* Icon + Number */}
            <div class="mb-6 flex items-start justify-between">
              <div class="bg-accent-primary/10 group-hover:bg-accent-primary/[0.18] flex h-11 w-11 items-center justify-center rounded-xl transition-colors duration-300">
                <ServiceIcon class="text-accent-primary h-5 w-5 transition-transform duration-300 group-hover:scale-110" />
              </div>
              <span class="font-sora text-accent-primary/20 group-hover:text-accent-primary/40 text-6xl leading-none font-bold transition-colors duration-300">
                {service.number}
              </span>
            </div>

            {/* Title & Description */}
            <h3 class="mb-3 text-xl font-bold text-neutral-800">
              {service.title}
            </h3>
            <p class="mb-auto text-sm leading-relaxed text-neutral-500">
              {service.description}
            </p>

            {/* Divider */}
            <hr class="my-6 border-neutral-200" />

            {/* Bullets – 2 columns */}
            <ul class="grid grid-cols-2 gap-x-6 gap-y-3">
              {service.bullets.map((bullet) => (
                <li class="flex items-center gap-2">
                  <CircleCheck class="text-accent-primary h-4 w-4 shrink-0" />
                  <span class="text-sm text-neutral-700">{bullet}</span>
                </li>
              ))}
            </ul>
          </div>
        );
      })
    }
  </div>
</SectionWrapper>
