---
import SectionWrapper from "../../ui/SectionWrapper.astro";
import SectionHeader from "../../ui/SectionHeader.astro";
import { MessageCircle, Wrench, Handshake, Check } from "@lucide/astro";

const steps = [
  {
    number: "01",
    icon: MessageCircle,
    title: "Konzultace a návrh",
    description:
      "Osobně probereme vaše požadavky, prohlédneme prostory a připravíme transparentní cenovou nabídku s termínem realizace.",
    bullets: [
      "Osobní prohlídka místa",
      "Návrh variant řešení",
      "Jasná cenová kalkulace",
    ],
  },
  {
    number: "02",
    icon: Wrench,
    title: "Precizní realizace",
    description:
      "Instalaci provádíme čistě a přesně, s použitím ověřených komponentů od renomovaných značek. Průběžně kontrolujeme kvalitu.",
    bullets: [
      "Ověřené materiály a komponenty",
      "Průběžná kontrola kvality",
      "Minimální zásah do interiéru",
    ],
  },
  {
    number: "03",
    icon: Handshake,
    title: "Předání a servis",
    description:
      "Dílo předáme plně funkční včetně revizní zprávy. Zaškolíme obsluhu a poskytujeme záruční i pozáruční servis.",
    bullets: [
      "Revizní zpráva k předání",
      "Zaškolení obsluhy",
      "Záruční a pozáruční podpora",
    ],
  },
];
---

<SectionWrapper background="light" withGrid>
  <SectionHeader
    eyebrow="Jak pracujeme"
    title="Jak probíhá elektroinstalace"
    description="Od prvního kontaktu po předání. Tři kroky, žádné překvapení."
    background="light"
    descWidth="narrow"
  />

  <div class="mt-12 grid gap-6 md:grid-cols-3">
    {
      steps.map((step) => (
        <div class="group relative rounded-xl border border-neutral-200 bg-white p-8 shadow-sm transition-shadow duration-200 hover:shadow-md">
          <span
            class="font-sora group-hover:text-accent-primary/40 absolute top-6 right-6 text-5xl leading-none font-bold text-neutral-100 transition-colors duration-300 select-none"
            aria-hidden="true"
          >
            {step.number}
          </span>

          <div
            class="bg-accent-primary/10 group-hover:bg-accent-primary/[0.18] mb-6 flex h-12 w-12 items-center justify-center rounded-full transition-colors duration-300"
            aria-hidden="true"
          >
            <step.icon class="text-accent-primary h-5 w-5 transition-transform duration-300 group-hover:scale-110" />
          </div>

          <h3 class="font-sora mb-3 text-xl font-bold text-neutral-900">
            {step.title}
          </h3>
          <p class="mb-6 text-sm leading-relaxed text-neutral-600">
            {step.description}
          </p>

          <ul class="space-y-2">
            {step.bullets.map((bullet) => (
              <li class="flex items-center gap-3">
                <span
                  class="bg-accent-primary/10 border-accent-primary/30 flex h-5 w-5 shrink-0 items-center justify-center rounded-full border"
                  aria-hidden="true"
                >
                  <Check class="text-accent-primary h-3 w-3" />
                </span>
                <span class="text-sm font-medium text-neutral-700">
                  {bullet}
                </span>
              </li>
            ))}
          </ul>
        </div>
      ))
    }
  </div>
</SectionWrapper>
