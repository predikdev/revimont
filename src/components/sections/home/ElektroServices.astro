---
import SectionWrapper from "../../ui/SectionWrapper.astro";
import SectionHeader from "../../ui/SectionHeader.astro";
import ServiceCard from "../../ui/cards/ServiceCard.astro";

import House from "../../../assets/icons/house.svg";
import ClipboardCheck from "../../../assets/icons/clipboard-check.svg";
import Zap from "../../../assets/icons/zap.svg";
import Lightbulb from "../../../assets/icons/lightbulb.svg";
import Hammer from "../../../assets/icons/hammer.svg";
import Wrench from "../../../assets/icons/wrench.svg";

const services = [
  {
    title: "Domovní elektroinstalace",
    description:
      "Kompletní rozvody pro rodinné domy a byty. Od hrubých prací až po kompletaci zásuvek a vypínačů.",
    icon: House,
  },
  {
    title: "Revize a projekty",
    description:
      "Zajišťujeme výchozí i pravidelné revize elektroinstalací a hromosvodů včetně projektové dokumentace.",
    icon: ClipboardCheck,
  },
  {
    title: "Hromosvody",
    description:
      "Montáže a opravy hromosvodů pro zajištění maximální bezpečnosti vašeho objektu před bleskem.",
    icon: Zap,
  },
  {
    title: "Osvětlení",
    description:
      "Návrh a montáž moderního LED osvětlení. Inteligentní systémy řízení světel pro úsporu energie.",
    icon: Lightbulb,
  },
  {
    title: "Průmyslové instalace",
    description:
      "Silnoproudé instalace pro haly, dílny a kancelářské prostory. Zapojení strojů a rozvaděčů.",
    icon: Hammer,
  },
  {
    title: "Servis a opravy",
    description:
      "Rychlý servis při poruchách. Opravy zásuvek, jističů a odstraňování závad po revizích.",
    icon: Wrench,
  },
];
---

<SectionWrapper background="light" withGrid>
  <SectionHeader eyebrow="Co pro vás zařídíme" title="Kompletní elektroinstalační práce" />

  <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
    {
      services.map((service) => (
        <ServiceCard title={service.title} description={service.description}>
          <service.icon slot="icon" class="w-6 h-6" />
        </ServiceCard>
      ))
    }
  </div>
</SectionWrapper>
