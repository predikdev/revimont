---
import SectionWrapper from "../../ui/SectionWrapper.astro";
import SectionHeader from "../../ui/SectionHeader.astro";
import DetailedServiceCard from "../../ui/cards/DetailedServiceCard.astro";

import Zap from "../../../assets/icons/zap.svg";
import ClipboardCheck from "../../../assets/icons/clipboard-check.svg";
import Factory from "../../../assets/icons/factory.svg";

const services = [
  {
    title: "Elektroinstalace",
    description:
      "Kompletní silnoproudé rozvody pro novostavby i rekonstrukce. Zajišťujeme vše od projektu, přes sekání drážek a kabeláž, až po kompletaci zásuvek a finální revizi.",
    icon: Zap,
    bullets: ["Rodinné domy", "Bytové domy", "Elektrické přípojky", "Rozvaděče"],
    link: "/sluzby/elektroinstalace",
  },
  {
    title: "Revize",
    description:
      "Bezpečnost je priorita. Provádíme výchozí revize pro kolaudace i pravidelné kontroly pro pojišťovny. Revidujeme elektroinstalace, hromosvody, spotřebiče i nářadí.",
    icon: ClipboardCheck,
    bullets: [
      "Revize do 1000V",
      "Revizní zprávy a dokumentace",
      "Poradenství a návrh opatření",
      "Hromosvody",
    ],
    link: "/sluzby/revize",
  },
  {
    title: "Montáže a opravy",
    description:
      "Specializujeme se na náročné provozy. Instalujeme osvětlení výrobních hal, zapojujeme stroje a zajišťujeme údržbu s důrazem na minimální odstávky výroby.",
    icon: Factory,
    bullets: [
      "Domácí telefony a zvonky",
      "Instalace zvonkových tabel",
      "Rozvody domácích telefonů v bytových domech",
      "Náhrady starších systémů za nové",
    ],
    link: "/sluzby",
  },
];
---

<SectionWrapper background="light" withGrid>
  <div class="max-w-2xl mb-16">
    <p class="uppercase text-accent-primary text-sm font-bold tracking-widest mb-4">NAŠE SLUŽBY</p>
    <h2 class="text-4xl md:text-5xl font-bold text-black mb-6">
      Komplexní řešení<br />pro vaši nemovitost
    </h2>
    <p class="text-black/70 text-lg leading-relaxed">
      Ať už potřebujete vyměnit zásuvku nebo zasíťovat výrobní halu, máme pro vás řešení. Pracujeme
      rychle, čistě a dle norem.
    </p>
  </div>

  <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
    {
      services.map((service) => (
        <DetailedServiceCard
          title={service.title}
          description={service.description}
          bullets={service.bullets}
          link={service.link}
        >
          <service.icon slot="icon" class="w-7 h-7" />
        </DetailedServiceCard>
      ))
    }
  </div>
</SectionWrapper>
