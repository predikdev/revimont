---
import SectionWrapper from "../../ui/SectionWrapper.astro";
import SectionHeader from "../../ui/SectionHeader.astro";
import DetailedServiceCard from "../../ui/cards/DetailedServiceCard.astro";

import Zap from "../../../assets/icons/zap.svg";
import ClipboardCheck from "../../../assets/icons/clipboard-check.svg";
import Hammer from "../../../assets/icons/hammer.svg";

const services = [
  {
    title: "Elektroinstalace",
    description:
      "Elektroinstalační práce pro rodinné domy, byty i firemní objekty. Zajišťujeme návrh řešení, realizaci rozvodů, instalaci rozvaděčů i koncových prvků. Pracujeme podle platných norem s důrazem na bezpečnost, spolehlivost a dlouhou životnost instalace.",
    icon: Zap,
    bullets: ["Rodinné domy", "Bytové domy", "Elektrické přípojky", "Rozvaděče"],
    link: "/sluzby/elektroinstalace",
  },
  {
    title: "Revize",
    description:
      "Provádíme výchozí i pravidelné revize elektroinstalací, hromosvodů a elektrických zařízení do 1000 V. Součástí je zpracování revizní zprávy, kontrola bezpečnosti instalace a doporučení pro odstranění zjištěných závad.",
    icon: ClipboardCheck,
    bullets: [
      "Revize do 1000V",
      "Revizní zprávy a dokumentace",
      "Poradenství a návrh opatření",
      "Hromosvody",
    ],
    link: "/sluzby/revize",
  },
  {
    title: "Montáže a opravy",
    description:
      "Zajišťujeme montáž a servis domácích i technických systémů, od instalace zvonků a telefonů až po výměny a opravy starších zařízení. Pracujeme rychle a spolehlivě, s důrazem na funkčnost a minimální zásah do provozu objektu.",
    icon: Hammer,
    bullets: [
      "Domácí telefony a zvonky",
      "Instalace zvonkových tabel",
      "Rozvody domácích telefonů v bytových domech",
      "Náhrady starších systémů za nové",
    ],
    link: "/sluzby",
  },
];
---

<SectionWrapper background="light" withGrid>
  <div class="mb-16">
    <SectionHeader
      eyebrow="Naše služby"
      title="Komplexní řešení pro vaši nemovitost"
      description="Elektroinstalace, revize i montáže technických zařízení pro domácnosti, bytové domy i firmy. Nabízíme spolehlivé řešení od návrhu až po realizaci a následný servis."
      background="light"
      width="narrow"
      class="mb-0"
    />
  </div>

  <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
    {
      services.map((service) => (
        <DetailedServiceCard
          title={service.title}
          description={service.description}
          bullets={service.bullets}
          link={service.link}
        >
          <service.icon slot="icon" class="w-7 h-7" />
        </DetailedServiceCard>
      ))
    }
  </div>
</SectionWrapper>
