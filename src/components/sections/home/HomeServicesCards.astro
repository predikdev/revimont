---
import SectionWrapper from "../../ui/SectionWrapper.astro";

import { Zap, ShieldCheck, Wrench } from "@lucide/astro";

const services = [
  {
    number: "01",
    title: "Elektroinstalace",
    description:
      "Kompletní návrh a realizace elektrických rozvodů pro novostavby, rekonstrukce i komerční objekty.",
    link: "/sluzby/elektroinstalace",
    icon: Zap,
    bullets: ["Novostavby", "Rekonstrukce", "Rozvaděče", "Hromosvody"],
  },
  {
    number: "02",
    title: "Revize a kontroly",
    description:
      "Pravidelné revize elektroinstalací a zařízení dle platné legislativy včetně vystavení revizních zpráv.",
    link: "/sluzby/revize",
    icon: ShieldCheck,
    bullets: ["Výchozí revize", "Pravidelné revize", "Revizní zprávy", "Kontrola bezpečnosti"],
  },
  {
    number: "03",
    title: "Servisní práce",
    description:
      "Opravy poruch, údržba a modernizace stávajících elektrických instalací včetně havarijního servisu.",
    link: "/sluzby",
    icon: Wrench,
    bullets: ["Diagnostika závad", "Rychlé opravy", "Výměna prvků", "Modernizace rozvodů"],
  },
];
---

<SectionWrapper background="light" withGrid>
  <!-- Section header -->
  <div class="mb-14 md:mb-18">
    <!-- Eyebrow -->
    <div class="mb-5 flex items-center gap-3">
      <span class="h-px w-8 bg-accent-primary"></span>
      <span class="text-sm font-semibold uppercase tracking-widest text-accent-primary">
        Naše služby
      </span>
    </div>

    <!-- Title with underline decoration -->
    <h2 class="font-sora text-4xl font-bold leading-tight text-black md:text-5xl">
      Komplexní řešení pro<br />
      <span class="relative inline-block pb-3">
        vaši nemovitost
        <span
          class="absolute bottom-0 left-0 h-[3px] w-full rounded-full bg-accent-primary"
        ></span>
      </span>
    </h2>

    <!-- Description -->
    <p class="mt-8 max-w-2xl text-base leading-relaxed text-black/60 md:text-lg">
      Nabízíme profesionální elektrikářské služby od návrhu až po realizaci. Každý projekt
      řešíme s důrazem na kvalitu, bezpečnost a dlouhodobou spolehlivost.
    </p>
  </div>

  <!-- Cards grid -->
  <div class="grid gap-6 md:grid-cols-2 xl:grid-cols-3">
    {
      services.map((service) => (
        <article class="group relative overflow-hidden rounded-2xl border border-border/60 bg-white p-8 shadow-[0_4px_24px_-8px_rgba(0,0,0,0.1)] transition-all duration-300 hover:-translate-y-1 hover:shadow-[0_16px_40px_-12px_rgba(0,0,0,0.16)] md:p-10">
          <!-- Orange top accent line -->
          <span class="absolute left-1/2 top-0 h-[3px] w-4/5 -translate-x-1/2 bg-accent-primary opacity-0 transition-opacity duration-300 group-hover:opacity-100" />

          <!-- Number badge -->
          <span class="absolute right-7 top-6 font-sora text-sm font-bold tracking-wide text-accent-primary/30">
            {service.number}
          </span>

          <!-- Icon -->
          <div class="mb-7 inline-flex h-13 w-13 items-center justify-center rounded-xl bg-accent-primary/10 text-accent-primary transition-colors duration-300 group-hover:bg-accent-primary/[0.16]">
            <service.icon class="h-5 w-5" />
          </div>

          <!-- Title -->
          <h3 class="font-sora text-xl font-bold text-black md:text-2xl">{service.title}</h3>

          <!-- Description -->
          <p class="mt-3 text-[0.9375rem] leading-relaxed text-black/55">{service.description}</p>

          <!-- Divider -->
          <hr class="my-6 border-border/50" />

          <!-- Bullets -->
          <ul class="space-y-3">
            {service.bullets.map((bullet) => (
              <li class="flex items-center gap-3 text-sm text-black/65">
                <span class="h-2 w-2 shrink-0 rounded-full bg-accent-primary" />
                <span>{bullet}</span>
              </li>
            ))}
          </ul>

          <!-- CTA link -->
          <a
            href={service.link}
            class="group/link mt-8 inline-flex items-center gap-1.5 text-sm font-semibold text-accent-primary"
          >
            <span>Zjistit více</span>
            <span class="transition-transform duration-200 group-hover/link:translate-x-0.5">
              →
            </span>
          </a>
        </article>
      ))
    }
  </div>
</SectionWrapper>
