---
import SectionWrapper from "../../ui/SectionWrapper.astro";

import { Zap, ShieldCheck, Wrench } from "@lucide/astro";

const services = [
  {
    number: "01",
    title: "Elektroinstalace",
    description:
      "Kompletní návrh a realizace elektrických rozvodů pro novostavby, rekonstrukce i komerční objekty.",
    link: "/sluzby/elektroinstalace",
    icon: Zap,
    bullets: ["Novostavby", "Rekonstrukce", "Bytové domy", "Rozvaděče"],
  },
  {
    number: "02",
    title: "Revize a kontroly",
    description:
      "Pravidelné revize elektroinstalací a zařízení dle platné legislativy včetně vystavení revizních zpráv.",
    link: "/sluzby/revize",
    icon: ShieldCheck,
    bullets: [
      "Výchozí revize",
      "Pravidelné revize",
      "Revize hromosvodů",
      "Kontrola bezpečnosti",
    ],
  },
  {
    number: "03",
    title: "Montáže a opravy",
    description:
      "Opravy poruch, údržba a modernizace stávajících elektrických instalací včetně havarijního servisu.",
    link: "/sluzby",
    icon: Wrench,
    bullets: [
      "Domácí telefony",
      "Zvonková tabla",
      "Rozvody domáchích telefonů",
      "Modernizace systémů",
    ],
  },
];
---

<SectionWrapper id="sluzby" background="light" withGrid>
  <!-- Section header -->
  <div class="mb-14 md:mb-18">
    <!-- Eyebrow -->
    <div class="mb-5 flex items-center gap-3">
      <span aria-hidden="true" class="bg-accent-primary h-px w-8"></span>
      <span
        class="text-accent-primary text-sm font-semibold tracking-widest uppercase"
      >
        Naše služby
      </span>
    </div>

    <!-- Title with underline decoration -->
    <h2
      class="font-sora text-4xl leading-tight font-bold text-neutral-800 md:text-5xl"
    >
      Komplexní řešení pro<br />
      <span class="relative inline-block pb-3">
        vaši nemovitost
        <span
          aria-hidden="true"
          class="bg-accent-primary absolute bottom-0 left-0 h-[3px] w-full rounded-full"
        ></span>
      </span>
    </h2>

    <!-- Description -->
    <p
      class="mt-8 max-w-2xl text-base leading-relaxed text-neutral-800/60 md:text-lg"
    >
      Nabízíme profesionální elektrikářské služby od návrhu až po realizaci.
      Každý projekt řešíme s důrazem na kvalitu, bezpečnost a dlouhodobou
      spolehlivost.
    </p>
  </div>

  <!-- Cards grid -->
  <div class="grid gap-6 md:grid-cols-2 xl:grid-cols-3">
    {
      services.map((service) => (
        <article class="group relative overflow-hidden rounded-xl border border-neutral-200 bg-white p-8 shadow-sm transition-shadow duration-200 hover:shadow-md md:p-10">
          <span
            aria-hidden="true"
            class="bg-accent-primary absolute top-0 left-1/2 h-[3px] w-4/5 -translate-x-1/2 opacity-0 transition-opacity duration-300 group-hover:opacity-100"
          />

          <span
            aria-hidden="true"
            class="font-sora text-accent-primary/30 group-hover:text-accent-primary/50 absolute top-6 right-7 text-sm font-bold tracking-wide transition-colors duration-300"
          >
            {service.number}
          </span>

          <div
            aria-hidden="true"
            class="bg-accent-primary/10 text-accent-primary group-hover:bg-accent-primary/[0.16] mb-7 inline-flex h-13 w-13 items-center justify-center rounded-xl transition-colors duration-300"
          >
            <service.icon class="h-5 w-5 transition-transform duration-300 group-hover:scale-110" />
          </div>

          <h3 class="font-sora text-xl font-bold text-neutral-800 md:text-2xl">
            {service.title}
          </h3>

          <p class="mt-3 text-[0.9375rem] leading-relaxed text-neutral-800/55">
            {service.description}
          </p>

          <hr aria-hidden="true" class="my-6 border-neutral-300/50" />

          <ul class="space-y-3">
            {service.bullets.map((bullet) => (
              <li class="flex items-center gap-3 text-sm text-neutral-800/65">
                <span
                  aria-hidden="true"
                  class="bg-accent-primary h-2 w-2 shrink-0 rounded-full"
                />
                <span>{bullet}</span>
              </li>
            ))}
          </ul>

          <a
            href={service.link}
            aria-label={`Zjistit více o ${service.title}`}
            class="group/link text-accent-primary mt-8 inline-flex items-center gap-1.5 text-sm font-semibold"
          >
            <span aria-hidden="true">Zjistit více</span>
            <span
              aria-hidden="true"
              class="transition-transform duration-200 group-hover/link:translate-x-0.5"
            >
              →
            </span>
          </a>
        </article>
      ))
    }
  </div>
</SectionWrapper>
