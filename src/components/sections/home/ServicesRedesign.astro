---
import { Image } from "astro:assets";

import Button from "../../ui/Button.astro";

import Elektroinstalace from "../../../assets/images/elektroinstalace.png";
import Revize from "../../../assets/images/revize.png";
import Rekonstrukce from "../../../assets/images/rekonstrukce.png";
import Zap from "../../../assets/icons/zap.svg";
import ClipboardCheck from "../../../assets/icons/clipboard-check.svg";
import Hammer from "../../../assets/icons/hammer.svg";

interface ServiceItem {
  title: string;
  description: string;
  href: string;
  image: ImageMetadata;
  imageAlt: string;
  Icon: typeof Zap;
  tag: string;
}

interface Props {
  variant?: "editorial" | "cards" | "minimal";
}

const { variant = "editorial" } = Astro.props;

const services: ServiceItem[] = [
  {
    title: "Elektroinstalační práce",
    description:
      "Kompletní elektroinstalace v bytových i rodinných domech včetně přípojek, rekonstrukcí a revizní dokumentace.",
    href: "/sluzby/elektroinstalace",
    image: Elektroinstalace,
    imageAlt: "Elektroinstalace v rodinném domě",
    Icon: Zap,
    tag: "Komplexní řešení",
  },
  {
    title: "Opravy a montáže domácích systémů",
    description:
      "Montáže a opravy domácích telefonů, zvonků i modernizace starších systémů bez zbytečných prodlev.",
    href: "/sluzby",
    image: Revize,
    imageAlt: "Montáž domácích systémů",
    Icon: Hammer,
    tag: "Rychlé zásahy",
  },
  {
    title: "Revizní činnost",
    description:
      "Revize elektroinstalací a hromosvodů včetně kompletní revizní dokumentace a doporučení.",
    href: "/sluzby",
    image: Rekonstrukce,
    imageAlt: "Revizní činnost a kontrola",
    Icon: ClipboardCheck,
    tag: "Bezpečnost na prvním místě",
  },
];
---

<section id="services" class="bg-background">
  <div class="container py-24">
    <div class="flex flex-col gap-4 text-left text-black sm:max-w-2xl">
      <p class="uppercase text-accent-primary text-sm font-medium tracking-widest">Naše služby</p>
      <h2 class="font-playfair font-bold text-heading-2">Co pro vás zařídíme</h2>
      <p class="text-body text-black/80">
        Kompletní elektroinstalační práce od prvního návrhu až po vydání revizní zprávy.
      </p>
    </div>

    {
      variant === "editorial" ? (
        <div class="mt-14 grid gap-10 lg:grid-cols-[1.1fr_1fr]">
          <div class="rounded-2xl bg-white p-8 shadow-lg">
            <div class="flex items-center gap-3 text-accent-primary">
              <Zap class="h-5 w-5" />
              <span class="text-sm font-semibold uppercase tracking-widest">Hlavní služba</span>
            </div>
            <h3 class="mt-4 font-playfair text-heading">Elektroinstalace bez starostí</h3>
            <p class="mt-4 text-body text-black/80">
              Návrh, realizace i revize. Vše pod jednou střechou, s jasnou komunikací a termíny.
            </p>
            <div class="mt-8 flex flex-wrap gap-3 text-sm text-black/80">
              <span class="rounded-full bg-accent-primary/10 px-3 py-1">Novostavby</span>
              <span class="rounded-full bg-accent-primary/10 px-3 py-1">Rekonstrukce</span>
              <span class="rounded-full bg-accent-primary/10 px-3 py-1">Revize</span>
            </div>
            <div class="mt-8 flex flex-wrap gap-4">
              <Button variant="quaternary" href="/kontakt">Nezávazná poptávka</Button>
              <Button variant="ternary" href="/sluzby">Zobrazit vše</Button>
            </div>
          </div>

          <ul role="list" class="grid gap-6">
            {services.map((service) => (
              <li class="rounded-2xl border border-black/10 bg-white p-6 shadow-sm transition hover:-translate-y-1 hover:shadow-md">
                <a href={service.href} class="group flex items-start gap-4">
                  <span class="flex h-10 w-10 items-center justify-center rounded-xl bg-accent-primary/10 text-accent-primary">
                    <service.Icon class="h-5 w-5" />
                  </span>
                  <div>
                    <div class="text-xs font-semibold uppercase tracking-widest text-accent-primary/80">
                      {service.tag}
                    </div>
                    <h3 class="mt-2 text-lead font-playfair text-black group-hover:text-accent-primary">
                      {service.title}
                    </h3>
                    <p class="mt-2 text-body text-black/70">{service.description}</p>
                  </div>
                </a>
              </li>
            ))}
          </ul>
        </div>
      ) : null
    }

    {
      variant === "cards" ? (
        <ul role="list" class="mt-14 grid gap-8 md:grid-cols-2 lg:grid-cols-3">
          {services.map((service) => (
            <li class="h-full">
              <article class="group flex h-full flex-col overflow-hidden rounded-2xl bg-white shadow-md transition hover:-translate-y-1 hover:shadow-lg">
                <div class="relative h-48">
                  <Image
                    src={service.image}
                    alt={service.imageAlt}
                    class="h-full w-full object-cover"
                    sizes="(min-width: 1024px) 360px, (min-width: 768px) 50vw, 100vw"
                    width={720}
                    height={480}
                    format="avif"
                  />
                  <div
                    aria-hidden="true"
                    class="absolute inset-0 bg-linear-to-t from-black/60 to-black/10"
                  ></div>
                  <span class="absolute left-4 top-4 inline-flex items-center gap-2 rounded-full bg-white/90 px-3 py-1 text-xs font-semibold uppercase tracking-widest text-black">
                    <service.Icon class="h-4 w-4 text-accent-primary" />
                    {service.tag}
                  </span>
                </div>
                <div class="flex flex-1 flex-col gap-4 p-6">
                  <h3 class="text-lead font-playfair text-black">{service.title}</h3>
                  <p class="text-body text-black/70">{service.description}</p>
                  <a href={service.href} class="mt-auto inline-flex items-center gap-2 text-sm font-semibold text-accent-primary">
                    Zjistit více <span aria-hidden="true">→</span>
                  </a>
                </div>
              </article>
            </li>
          ))}
        </ul>
      ) : null
    }

    {
      variant === "minimal" ? (
        <div class="mt-14 grid gap-10 lg:grid-cols-[1fr_1.2fr]">
          <div class="rounded-2xl border border-black/10 bg-white p-8 shadow-sm">
            <h3 class="text-lead font-playfair text-black">Proč s námi</h3>
            <p class="mt-4 text-body text-black/70">
              Transparentní rozpočty, jasné termíny a certifikovaní technici s dlouholetou praxí.
            </p>
            <div class="mt-8 grid gap-4 text-sm text-black/80">
              <div class="flex items-start gap-3">
                <span class="mt-1 h-2 w-2 rounded-full bg-accent-primary"></span>
                <p>Revizní dokumentace a bezpečnostní kontrola v ceně.</p>
              </div>
              <div class="flex items-start gap-3">
                <span class="mt-1 h-2 w-2 rounded-full bg-accent-primary"></span>
                <p>Moderní technologie bez zbytečných prostojů.</p>
              </div>
              <div class="flex items-start gap-3">
                <span class="mt-1 h-2 w-2 rounded-full bg-accent-primary"></span>
                <p>Podpora i po dokončení zakázky.</p>
              </div>
            </div>
          </div>

          <ul role="list" class="grid gap-6">
            {services.map((service) => (
              <li class="rounded-2xl border border-black/10 bg-white p-6 shadow-sm">
                <a href={service.href} class="flex flex-col gap-4 sm:flex-row sm:items-center sm:gap-6">
                  <span class="flex h-12 w-12 items-center justify-center rounded-2xl bg-accent-primary/10 text-accent-primary">
                    <service.Icon class="h-6 w-6" />
                  </span>
                  <div class="flex-1">
                    <h3 class="text-lead font-playfair text-black">{service.title}</h3>
                    <p class="mt-2 text-body text-black/70">{service.description}</p>
                  </div>
                  <span class="inline-flex items-center text-sm font-semibold text-accent-primary">
                    Detail <span aria-hidden="true" class="ml-2">→</span>
                  </span>
                </a>
              </li>
            ))}
          </ul>
        </div>
      ) : null
    }
  </div>
</section>
