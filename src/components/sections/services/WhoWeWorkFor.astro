---
import SectionWrapper from "../../ui/SectionWrapper.astro";
import ClientTypeCard from "../../ui/cards/ClientTypeCard.astro";

const clientTypes = [
  {
    title: "Rodinné domy",
    description:
      "Ať už stavíte nový dům nebo rekonstruujete byt, zajistíme bezpečné a funkční řešení na míru vašim potřebám.",
  },
  {
    title: "Bytová družstva a SVJ",
    description:
      "Rekonstrukce stoupacích vedení, osvětlení společných prostor a modernizace zvonkových tabel v panelových domech.",
  },
  {
    title: "Průmysl a firmy",
    description:
      "Instalace v halách, kancelářích a komerčních prostorech. Důraz na dodržení norem a minimální omezení provozu.",
  },
  {
    title: "Developeři",
    description:
      "Spolehlivý partner pro vaše stavební projekty. Dodržujeme termíny, rozpočty a garantujeme kvalitu provedení.",
  },
];
---

<SectionWrapper background="dark">
  <div class="grid lg:grid-cols-2 gap-16 items-center">
    <div>
      <div class="mb-12">
        <h2 class="text-4xl md:text-5xl font-bold mb-8 mt-6">
          <span class="text-primary">Pro koho provádíme</span><br />
          <span class="text-accent-primary">elektroinstalace?</span>
        </h2>
        <p class="text-secondary text-lg leading-relaxed">
          Naše služby nejsou limitované velikostí zakázky. Přistupujeme se stejnou péčí k výměně
          jističe v bytě i k instalaci v nové výrobní hale.
        </p>
      </div>

      <div class="grid sm:grid-cols-2 gap-8">
        {
          clientTypes.map((client) => (
            <ClientTypeCard title={client.title} description={client.description} />
          ))
        }
      </div>
    </div>

    <div class="relative">
      <div
        class="aspect-4/5 bg-background-dark/50 rounded-lg border border-white/10 flex flex-col items-center justify-center p-8 text-center"
      >
        <p class="text-secondary text-sm">Vizualizace elektroinstalací</p>
      </div>
    </div>
  </div>
</SectionWrapper>
