---
const problems = [
  {
    number: "01",
    title: "Nefunkční systém",
    description: "Výpadky, žádný zvuk nebo občasná funkčnost.",
  },
  {
    number: "02",
    title: "Špatná slyšitelnost",
    description: "Rušení, šum nebo nejasný přenos hlasu mezi bytkem a vstupem.",
  },
  {
    number: "03",
    title: "Ovládání dveří",
    description: "Nelze otevřít vstupní dveře nebo reaguje se zpožděním.",
  },
  {
    number: "04",
    title: "Zastaralý systém",
    description: "Neexistují náhradní díly nebo servisní podpora.",
  },
];
---

<section id="montaze-problems" class="bg-background">
  <div class="container">
    <div
      class="section-header flex flex-col items-center gap-4 text-center text-black max-w-2xl mx-auto"
    >
      <p class="uppercase text-accent-primary text-sm font-medium">Nejčastější problémy</p>
      <h2 class="font-playfair font-bold text-heading-2">Jaké nejčastější problémy řešíme</h2>
    </div>

    <ul role="list" class="mt-12 grid gap-8 sm:grid-cols-2 lg:grid-cols-4">
      {
        problems.map((problem) => (
          <li class="flex flex-col gap-5">
            <span class="font-playfair font-bold text-5xl text-accent-primary">
              {problem.number}
            </span>
            <div class="flex flex-col gap-2">
              <h3 class="text-body font-semibold text-black">{problem.title}</h3>
              <p class="text-small text-black/70">{problem.description}</p>
            </div>
          </li>
        ))
      }
    </ul>
  </div>
</section>
