---
import House from "../../../assets/icons/house.svg";
import Wrench from "../../../assets/icons/wrench.svg";
import Zap from "../../../assets/icons/zap.svg";
import LightBulb from "../../../assets/icons/lightbulb.svg";
import Car from "../../../assets/icons/car.svg";
import ShieldCheck from "../../../assets/icons/shield-check.svg";

const services = [
  {
    title: "Elektroinstalace novostaveb",
    description:
      "Navrhneme a zrealizujeme kompletní rozvody pro rodinné domy. Počet zásuvek, okruhů i přípravy na budoucí technologie řešíme s vámi.",
    icon: House,
  },
  {
    title: "Rekonstrukce rozvodu",
    description:
      "Výměna starých hliníkových rozvodů za bezpečné měděné. Vyřešíme přetížené okruhy a doplníme zásuvky tam, kde chybí.",
    icon: Wrench,
  },
  {
    title: "Rozvaděče a jističe",
    description:
      "Montáž domovních rozvaděčů s přehledným označením. Moderní jističe pro maximální bezpečnost vaší instalace.",
    icon: Zap,
  },
  {
    title: "Osvětlení",
    description:
      "Návrh i montáž interiérového a exteriérového osvětlení. Řešení s důrazem na funkčnost a úsporu energie.",
    icon: LightBulb,
  },
  {
    title: "Revize elektroinstalace",
    description:
      "Po dokončení prací zajistíme revizi a vydáme revizní zprávu. Nabízíme i pravidelné revize pro firmy.",
    icon: ShieldCheck,
  },
  {
    title: "Příprava pro EV a FVE",
    description:
      "Připravíme instalaci pro nabíjení elektromobilu nebo fotovoltaiku. Snadná příprava = žádné dodatečné bourání.",
    icon: Car,
  },
];
---

<section id="electro-services" class="bg-background">
  <div class="container">
    <div class="section-header flex flex-col gap-4 text-left text-black max-w-2xl">
      <p class="uppercase text-accent-primary text-sm font-normal">Naše služby</p>
      <h2 class="font-playfair font-bold text-heading-2">Co pro vás zařídíme</h2>
      <p class="text-body text-black/70">
        Kompletní elektroinstalační práce od prvního návrhu až po vydání revizní zprávy.
      </p>
    </div>

    <ul role="list" class="mt-12 grid gap-6 sm:grid-cols-2 lg:grid-cols-3 lg:gap-8">
      {
        services.map((service) => (
          <li>
            <article class="flex h-full flex-col gap-4 rounded-2xl border border-border bg-white/80 p-10 shadow-lg shadow-black/10">
              <span
                class="flex h-10 w-10 items-center justify-center rounded-lg bg-accent-secondary text-accent-primary"
                aria-hidden="true"
              >
                <service.icon class="h-5 w-5" />
              </span>
              <h3 class="text-body font-bold text-black">{service.title}</h3>

              <p class="text-body text-black/70">{service.description}</p>
            </article>
          </li>
        ))
      }
    </ul>
  </div>
</section>
