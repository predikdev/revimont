---
import SectionWrapper from "../../ui/SectionWrapper.astro";
import { Phone, Bell, Network, RefreshCw, CircleCheck } from "@lucide/astro";

const services = [
  {
    number: "01",
    title: "Domácí telefony",
    description:
      "Kompletní instalace, servis a opravy domovních telefonů. Od klasických analogových sluchátek až po moderní digitální videotelefony s připojením na mobil.",
    icon: Phone,
    bullets: ["Analogové i digitální", "IP videotelefony", "Servis a údržba", "Nové instalace"],
  },
  {
    number: "02",
    title: "Zvonková tabla",
    description:
      "Montáž odolných zvonkových tabel s moderním designem. Zabezpečíme vstup do vašeho objektu pomocí čteček čipů, karet nebo kódových klávesnic.",
    icon: Bell,
    bullets: [
      "Antivandal provedení",
      "Čtečky čipů a RFID",
      "Podsvícení jmenovek",
      "Moderní design",
    ],
  },
  {
    number: "03",
    title: "Rozvody domácích telefonů",
    description:
      "Realizace a rekonstrukce kabelových rozvodů v bytových i rodinných domech. Zajišťujeme stoupací vedení i koncové přípojky k jednotlivým telefonům.",
    icon: Network,
    bullets: ["Stoupací vedení", "Opravy rozvodů", "Nové kabeláže", "Diagnostika závad"],
  },
  {
    number: "04",
    title: "Náhrady starších systémů",
    description:
      "Modernizace dosluhujících analogových systémů za nové digitální technologie. V mnoha případech realizujeme výměnu bez nutnosti stavebních úprav.",
    icon: RefreshCw,
    bullets: ["Výměna za digitál", "Bez sekání do zdí", "Rychlá realizace", "Zvýšení komfortu"],
  },
];
---

<SectionWrapper background="light" withGrid class="bg-background">
  {/* Header */}
  <div class="mb-12">
    <div class="mb-4 flex items-center gap-3">
      <span class="h-px w-8 bg-accent-primary" aria-hidden="true"></span>
      <p class="text-sm font-semibold uppercase tracking-widest text-accent-primary">Naše služby</p>
    </div>
    <h2
      class="mb-5 font-sora text-4xl font-bold leading-tight text-neutral-800 sm:text-5xl lg:text-6xl"
    >
      Montáže a opravy domácích systémů
    </h2>
    <p class="max-w-xl text-base leading-relaxed text-neutral-800/70">
      Navrhujeme, montujeme a servisujeme domovní telefony, zvonková tabla a vstupní systémy.
      Dodáváme funkční řešení pro rodinné domy, bytové domy i firemní objekty.
    </p>
  </div>

  {/* 2×2 grid */}
  <div class="grid gap-4 sm:grid-cols-2">
    {
      services.map((service) => {
        const ServiceIcon = service.icon;
        return (
          <div class="group relative flex flex-col overflow-hidden rounded-2xl border border-neutral-200 bg-background p-8 shadow-lg transition-all duration-300 hover:-translate-y-1 hover:shadow-2xl">
            {/* Hover accent line – slides in from left */}
            <span
              aria-hidden="true"
              class="absolute left-1/2 top-0 h-[3px] w-4/5 -translate-x-1/2 bg-accent-primary opacity-0 transition-opacity duration-300 group-hover:opacity-100"
            />

            {/* Icon + Number */}
            <div class="mb-6 flex items-start justify-between">
              <div class="flex h-11 w-11 items-center justify-center rounded-xl bg-accent-primary/10">
                <ServiceIcon class="h-5 w-5 text-accent-primary" />
              </div>
              <span class="font-sora text-6xl font-bold leading-none text-accent-primary/20">
                {service.number}
              </span>
            </div>

            {/* Title & Description */}
            <h3 class="mb-3 text-xl font-bold text-neutral-800">{service.title}</h3>
            <p class="mb-auto text-sm leading-relaxed text-neutral-500">{service.description}</p>

            {/* Divider */}
            <hr class="my-6 border-neutral-200" />

            {/* Bullets – 2 columns */}
            <ul class="grid grid-cols-2 gap-x-6 gap-y-3">
              {service.bullets.map((bullet) => (
                <li class="flex items-center gap-2">
                  <CircleCheck class="h-4 w-4 shrink-0 text-accent-primary" />
                  <span class="text-sm text-neutral-700">{bullet}</span>
                </li>
              ))}
            </ul>
          </div>
        );
      })
    }
  </div>
</SectionWrapper>
