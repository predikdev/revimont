---
interface Props {
  title: string;
  description: string;
  icon?: string;
}

const { title, description, icon = "" } = Astro.props;
const hasIconSlot = Astro.slots.has("icon");
---

<article class="flex items-start gap-4">
  <div
    class="mt-1 flex h-10 w-10 shrink-0 items-center justify-center rounded-lg bg-accent-secondary text-accent-primary"
    aria-hidden="true"
  >
    {
      hasIconSlot ? (
        <slot name="icon" />
      ) : icon ? (
        <img src={icon} alt="" class="h-5 w-5" loading="lazy" />
      ) : null
    }
  </div>

  <div class="flex flex-col gap-1">
    <h3 class="text-body font-semibold text-primary">{title}</h3>
    <p class="text-body text-secondary">{description}</p>
  </div>
</article>
