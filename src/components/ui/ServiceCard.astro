---
interface Props {
  href: string;
  title: string;
  description: string;
  image: string;
  imageAlt?: string;
}

const { href, title, description, image, imageAlt = "" } = Astro.props;

import Button from "./Button.astro";
---

<article class="service-card h-full flex flex-col">
  <a href={href} class="group block">
    <figure class="relative overflow-hidden rounded-lg">
      <img
        src={image}
        alt={imageAlt}
        loading="lazy"
        class="h-56 w-full object-cover transition-transform duration-300 group-hover:scale-105"
      />
      <div
        aria-hidden="true"
        class="pointer-events-none absolute inset-0 bg-linear-to-t from-black to-black/30"
      >
      </div>
      <div class="absolute bottom-4 left-4 right-4 flex flex-col gap-3">
        <span
          class="flex h-9 w-9 items-center justify-center rounded-md bg-accent-primary text-primary"
          aria-hidden="true"
        >
          <slot name="icon" />
        </span>

        <h3 class="text-lead text-primary font-semibold font-playfair">
          {title}
        </h3>
      </div>
    </figure>
  </a>

  <div class="flex flex-col flex-1 py-5">
    <p class="text-body text-black flex-1">
      {description}
    </p>

    <div class="mt-6">
      <Button href="/sluzby" variant="ternary" size="sm" class="inline-flex gap-2">
        Zjistit více <span aria-hidden="true">→</span>
      </Button>
    </div>
  </div>
</article>
