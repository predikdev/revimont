---
interface Props {
  href: string;
  title: string;
  description: string;
  image: string;
  imageAlt?: string;
}

const { href, title, description, image, imageAlt = "" } = Astro.props;

import Button from "./Button.astro";
---

<article class="service-card py-8">
  <a href={href} class="group block">
    <figure class="relative overflow-hidden rounded-xl">
      <img
        src={image}
        alt={imageAlt}
        loading="lazy"
        class="h-64 w-full object-cover transition-transform duration-300 group-hover:scale-105"
      />

      <!-- overlay -->
      <div
        aria-hidden="true"
        class="pointer-events-none absolute inset-0 bg-linear-to-t from-black to-black/30"
      >
      </div>

      <!-- content inside image -->
      <div class="absolute bottom-4 left-4 right-4 flex flex-col gap-3">
        <span
          class="flex h-9 w-9 items-center justify-center rounded-md bg-accent-primary text-black"
          aria-hidden="true"
        >
          <slot name="icon" />
        </span>

        <h3 class="text-lead text-primary font-medium font-playfair">
          {title}
        </h3>
      </div>
    </figure>
  </a>

  <div class="py-6">
    <p class="text-body">
      {description}
    </p>

    <a
      href={href}
      class="py-6 inline-flex items-center gap-1 text-sm font-medium text-accent-primary hover:underline"
    >
      <Button href="/sluzby" variant="ternary" size="sm" class="flex gap-2">
        Zjistit více <span aria-hidden="true">→</span>
      </Button>
    </a>
  </div>
</article>
