---
interface Props {
  eyebrow?: string;
  title: string;
  description?: string;
  titleWidth?: "" | "narrow";
  descWidth?: "" | "narrow";
  background?: "light" | "dark";
  align?: "left" | "center";
  class?: string;
}

const {
  eyebrow,
  title,
  description,
  titleWidth = "",
  descWidth = "",
  background = "dark",
  align = "left",
  class: className = "",
} = Astro.props;
---

<div
  class:list={["mb-8", align === "center" && "mx-auto text-center", className]}
>
  {
    eyebrow && (
      <p class="text-accent-primary mb-3 text-sm font-semibold tracking-wide uppercase">
        {eyebrow}
      </p>
    )
  }
  <h2
    class:list={[
      "font-sora text-4xl leading-14 md:text-5xl",
      titleWidth === "narrow" && "max-w-[15ch]",
      background === "dark" && "text-neutral-50",
      "font-bold text-neutral-800",
    ]}
  >
    {title}
  </h2>
  {
    description && (
      <p
        class:list={[
          "mt-6",
          descWidth === "narrow" && "max-w-3xl",
          background === "dark" && "text-neutral-300/80",
          "text-lg leading-relaxed text-neutral-800/80",
        ]}
      >
        {description}
      </p>
    )
  }
</div>
