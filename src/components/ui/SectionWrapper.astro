---
interface Props {
  id?: string;
  background?: "light" | "dark";
  withGrid?: boolean;
  class?: string;
}

const { id, background = "light", withGrid = false, class: className = "" } = Astro.props;
---

<section
  id={id}
  class:list={[
    "relative py-10 overflow-hidden",
    background === "dark" ? "bg-neutral-800" : "bg-background",
    className,
  ]}
>
  {withGrid && <div class="absolute inset-0 bg-grid-pattern" />}

  <div class="container relative z-10">
    <slot />
  </div>
</section>
