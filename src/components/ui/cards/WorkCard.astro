---
interface Props {
  href: string;
  title: string;
  description: string;
  image: string;
  imageAlt?: string;
  badge?: string;
}

const { href, title, description, image, imageAlt = "", badge } = Astro.props;
---

<article class="group h-full">
  <a href={href} class="group flex h-full flex-col">
    <figure class="relative overflow-hidden rounded-tl-xl rounded-tr-xl">
      <img
        src={image}
        alt={imageAlt}
        loading="lazy"
        class="h-100 w-full object-cover transition-transform duration-300 group-hover:scale-105"
      />

      <div
        aria-hidden="true"
        class="pointer-events-none absolute inset-0 bg-linear-to-t from-black to-black/30"
      >
      </div>

      <div class="absolute bottom-4 left-4 right-4 flex flex-col gap-3">
        <!-- {
          badge ? (
            <span class="inline-flex w-fit items-center rounded-md bg-accent-primary px-3 py-1 text-xs font-medium text-primary">
              {badge}
            </span>
          ) : (
            ""
          )
        } -->
        <h3 class="text-lead font-playfair font-medium tracking-wide text-primary">{title}</h3>
      </div>
    </figure>

    <p class="mt-4 flex-1 text-body text-black">{description}</p>
  </a>
</article>
