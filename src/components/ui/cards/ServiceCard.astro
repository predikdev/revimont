---
interface Props {
  href: string;
  title: string;
  description: string;
  image: string;
  imageAlt?: string;
}

const { href, title, description, image, imageAlt = "" } = Astro.props;
---

<article class="service-card h-full flex flex-col">
  <a href={href} class="group block">
    <figure class="relative overflow-hidden rounded-tl-xl rounded-tr-xl">
      <img
        src={image}
        alt={imageAlt}
        loading="lazy"
        class="h-100 w-full object-cover transition-transform duration-300 group-hover:scale-110"
      />
      <div
        aria-hidden="true"
        class="pointer-events-none absolute inset-0 bg-linear-to-t from-black to-black/30"
      >
      </div>
      <div
        class="flex flex-col gap-4 absolute -bottom-12 left-0 right-0 transition-transform duration-200 ease-out group-hover:-translate-y-12 group-focus-within:-translate-y-12"
      >
        <div class="flex flex-col gap-3 px-4">
          <span
            class="flex h-9 w-9 items-center justify-center rounded-md bg-accent-primary text-primary"
            aria-hidden="true"
          >
            <slot name="icon" />
          </span>

          <h3 class="text-lead text-primary font-semibold font-playfair">
            {title}
          </h3>
        </div>

        <div class="relative h-14 overflow-hidden">
          <div
            aria-hidden="true"
            class="pointer-events-none absolute inset-x-0 bottom-0 h-0.5 bg-accent-primary z-20"
          >
          </div>
          <span
            class="absolute bottom-0 left-0 z-10 inline-flex w-full items-center bg-accent-primary/90 px-4 py-4 text-body font-bold text-primary"
          >
            Zjistit více <span aria-hidden="true" class="ml-2">→</span>
          </span>
        </div>
      </div>
    </figure>
  </a>

  <div class="flex flex-col flex-1 py-5">
    <p class="text-body text-black flex-1">
      {description}
    </p>
  </div>
</article>
