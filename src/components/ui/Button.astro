---
import { clsx } from "clsx";

interface Props {
  variant?: "primaryDark" | "primaryLight" | "secondaryLight" | "ghost";
  size?: "sm" | "md" | "lg";
  href?: string;
  class?: string;
  type?: "button" | "submit" | "reset";
  disabled?: boolean;
  [key: string]: unknown;
}

const {
  variant = "primaryDark",
  size = "md",
  href,
  class: className = "",
  type = "button",
  disabled = false,
  ...rest
} = Astro.props;

const base =
  "flex items-center justify-center gap-2 rounded font-medium transition-all duration-200 focus:outline-none cursor-pointer";

const variants = {
  primaryDark:
    "bg-accent-primary text-neutral-50 ring-offset-2 ring-offset-neutral-800 hover:ring-2 hover:ring-accent-primary",
  primaryLight:
    "bg-accent-primary text-neutral-50 ring-offset-2 ring-offset-background hover:ring-2 hover:ring-accent-primary",
  secondaryLight:
    "bg-neutral-800 text-neutral-50 ring-offset-2 ring-offset-background hover:ring-2 hover:ring-neutral-800",
  ghost: "bg-transparent text-neutral-500 hover:text-neutral-800",
};

const sizes = {
  sm: "py-2 px-4 text-xs",
  md: "py-3 px-6 text-sm",
  lg: "py-4 px-8 text-sm",
};

const classes = clsx(
  base,
  variants[variant],
  sizes[size],
  disabled && "cursor-not-allowed pointer-events-none opacity-50",
  className,
);
---

{
  href ? (
    <a href={href} class={classes} aria-disabled={disabled ? "true" : undefined} {...rest}>
      <slot />
    </a>
  ) : (
    <button type={type} class={classes} role="button" disabled={disabled} {...rest}>
      <slot />
    </button>
  )
}
