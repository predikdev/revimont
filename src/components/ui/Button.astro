---
import { clsx } from "clsx";

interface Props {
  variant?: "primary" | "secondary";
  size?: "sm" | "md";
  href?: string;
  class?: string;
}

const { variant = "primary", size = "md", href, class: className = "" } = Astro.props;

const base =
  "inline-flex items-center justify-center rounded-lg font-medium transition focus:outline-none focus-visible:ring-2 focus-visible:ring-accent-primary/50 focus-visible:ring-offset-2 focus-visible:ring-offset-background cursor-pointer";

const variants = {
  primary:
    "bg-accent-primary text-primary hover:bg-accent-primary/90 hover:ring-2 hover:ring-offset-2 hover:ring-offset-background hover:ring-accent-primary/90",
  secondary:
    "bg-background-dark text-primary hover:bg-background-dark/90 hover:bg-background-dark/90 hover:ring-2 hover:ring-offset-2 hover:ring-offset-background hover:ring-background-dark/90",
};

const sizes = {
  sm: "h-9 px-4 text-sm",
  md: "h-11 px-6 text-sm",
};

const classes = clsx(base, variants[variant], sizes[size], className);
---

{
  href ? (
    <a href={href} class={classes}>
      <slot />
    </a>
  ) : (
    <button type="button" class={classes} role="button">
      <slot />
    </button>
  )
}
