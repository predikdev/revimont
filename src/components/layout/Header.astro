---
import PhoneIcon from "../../assets/icons/phone.svg";
import OpenMenu from "../../assets/icons/square-menu.svg";

import Logo from "./Logo.astro";
import Navigation from "./Navigation.astro";
import Button from "../ui/Button.astro";
---

<header class="site-header w-full flex items-center py-4 px-2 z-40">
  <div class="mx-auto container flex items-center justify-between">
    <Logo class="w-48" />
    <Navigation />
    <div class="hidden lg:flex items-center gap-4">
      <div class="text-primary/75">
        <a href="tel:+420775736112" class="flex gap-2 hover:text-accent-primary transition-colors">
          <img src={PhoneIcon.src} alt="Telefon ikona" class="w-4" />
          <p class="text-small">+420 775 736 112</p>
        </a>
      </div>
      <Button variant="primary" href="/kontakt">Poptávka</Button>
    </div>
    <button type="button" aria-label="Otevřít menu" data-menu-open class="lg:hidden text-primary">
      <OpenMenu class="text-primary" />
    </button>
  </div>
</header>

<style>
  .site-header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 70;
    backdrop-filter: blur(16px);
    -webkit-backdrop-filter: blur(16px);
    background-color: oklch(0.22 0 0 / 0.7);
  }
</style>
