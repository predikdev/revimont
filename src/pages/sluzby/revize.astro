---
import BaseLayout from "../../layouts/BaseLayout.astro";
import PageHero from "../../components/sections/shared/PageHero.astro";
import RevizeServices from "../../components/sections/services/RevizeServices.astro";
import RevizeProcess from "../../components/sections/services/RevizeProcess.astro";
import RevizeClients from "../../components/sections/services/RevizeClients.astro";
import LetsWork from "../../components/sections/shared/LetsWork.astro";
import ContactFormSection from "../../components/sections/shared/ContactFormSection.astro";

const title = "Revizní činnost";
const description =
  "Zajistíme revizi elektroinstalací a plynových zařízení v souladu s platnými normami. Součástí je přehledná zpráva a doporučení k odstranění zjistěných závad.";
---

<BaseLayout heroBackground="/hero-bg.jpg">
  <PageHero
    slot="hero"
    id="hero"
    eyebrow="Revimont Klatovy"
    titleHtml={title}
    description={description}
    stats={[
      { number: "300+", label: "zakázek" },
      { number: "15+", label: "let zkušeností" },
      { number: "500+", label: "zakázek" },
    ]}
    primaryCta={{ label: "Nezávazná poptávka", href: "/kontakt" }}
  />
  <RevizeServices />
  <RevizeProcess />
  <RevizeClients />
  <LetsWork />
  <ContactFormSection />
</BaseLayout>
