---
import BaseLayout from "../layouts/BaseLayout.astro";
import PageHeroServicesNew from "../components/sections/shared/PageHeroServicesNew.astro";
import HomeServicesCards from "../components/sections/home/HomeServicesCards.astro";
import ContactSection from "../components/sections/shared/ContactSection.astro";
import Button from "../components/ui/Button.astro";
import elektroImage from "../assets/images/electric.jpg";
---

<BaseLayout
  pageTitle="Služby"
  pageDescription="Přehled služeb Revimont Klatovy - elektroinstalace, revize elektroinstalací a hromosvodů, opravy a montáže elektrozařízení."
  ogImage={elektroImage.src}
  ogImageAlt="Přehled služeb Revimont Klatovy"
>
  <PageHeroServicesNew
    slot="hero"
    eyebrow="Služby Revimont Klatovy"
    titleHtml={`Elektro služby<br />pro dům i firmu`}
    description="Vyberte si službu, kterou potřebujete. Zajišťujeme realizace od návrhu přes montáž až po revizi a následný servis."
    backgroundImage={elektroImage}
    backgroundImageAlt="Technik Revimont při elektroinstalaci"
  />

  <section class="bg-background relative" data-animate-section>
    <div class="bg-grid-pattern absolute inset-0" aria-hidden="true"></div>
    <div class="relative z-10 container">
      <div
        class="rounded-2xl border border-neutral-200 bg-white p-6 shadow-sm md:p-8"
      >
        <div class="grid gap-6 lg:grid-cols-[1.2fr_1fr] lg:items-center">
          <div>
            <p
              class="text-accent-primary text-xs font-semibold tracking-[0.2em] uppercase"
            >
              Rychlá orientace
            </p>
            <h2
              class="font-sora mt-3 text-2xl font-bold text-neutral-900 md:text-3xl"
            >
              Potřebujete revizi, novou instalaci nebo opravu?
            </h2>
            <p class="mt-3 leading-relaxed text-neutral-600">
              Pracujeme v Klatovech a okolí. Pokud si nejste jistí výběrem
              služby, stačí nám zavolat nebo poslat krátkou poptávku a navrhneme
              správný postup.
            </p>
          </div>
          <div class="grid gap-3 sm:grid-cols-2 lg:grid-cols-1">
            <Button
              href="/sluzby/elektroinstalace"
              variant="primaryLight"
              class="w-full"
            >
              Elektroinstalace
            </Button>
            <Button
              href="/sluzby/revize"
              variant="secondaryLight"
              class="w-full"
            >
              Revize
            </Button>
            <Button
              href="/sluzby/opravy-montaze"
              variant="secondaryLight"
              class="w-full"
            >
              Opravy a montáže
            </Button>
            <Button
              href="/kontakt"
              variant="secondaryOutline"
              class="w-full !border-neutral-200 !bg-white !text-neutral-800"
            >
              Nezávazná poptávka
            </Button>
          </div>
        </div>
      </div>
    </div>
  </section>

  <HomeServicesCards />
  <ContactSection />
</BaseLayout>
