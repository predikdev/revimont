---
import BaseLayout from "../layouts/BaseLayout.astro";
import PageHero from "../components/sections/shared/PageHero.astro";
import SectionWrapper from "../components/ui/SectionWrapper.astro";
import Button from "../components/ui/Button.astro";
import { COMPANY } from "../data/company";

const pageDescription =
  "Informace o zpracování osobních údajů, cookies a analytice na webu Revimont Klatovy. Přehledně a srozumitelně na jednom místě.";

const heroProps = {
  eyebrow: "Právní informace",
  title: "Ochrana osobních údajů",
  description:
    "Transparentně vysvětlujeme, jak pracujeme s osobními údaji a cookies na našem webu.",
};

const sections = [
  { id: "spravce", label: "Správce údajů" },
  { id: "rozsah", label: "Jaké údaje zpracováváme" },
  { id: "ucel", label: "Účel a doba uchování" },
  { id: "prava", label: "Vaše práva" },
  { id: "cookies", label: "Cookies a analytika" },
  { id: "kontakt", label: "Kontakt a námitky" },
] as const;
---

<BaseLayout
  pageTitle="Ochrana osobních údajů"
  pageDescription={pageDescription}
>
  <PageHero slot="hero" {...heroProps} />

  <SectionWrapper background="light" withGrid>
    <div class="container">
      <div class="grid gap-8 lg:grid-cols-[260px_minmax(0,1fr)] lg:items-start">
        <aside class="self-start lg:sticky lg:top-28" data-animate-section>
          <div
            class="rounded-2xl border border-neutral-200 bg-white p-5 shadow-sm"
          >
            <p
              class="text-accent-primary text-xs font-semibold tracking-[0.2em] uppercase"
            >
              Obsah stránky
            </p>
            <nav class="mt-4" aria-label="Obsah ochrany osobních údajů">
              <ul class="space-y-2">
                {
                  sections.map((section, index) => (
                    <li>
                      <a
                        href={`#${section.id}`}
                        class="group hover:text-accent-primary flex items-start gap-3 rounded-lg px-3 py-2 text-sm text-neutral-700 transition-colors hover:bg-neutral-50"
                      >
                        <span class="group-hover:text-accent-primary mt-0.5 text-xs font-semibold text-neutral-400">
                          {String(index + 1).padStart(2, "0")}
                        </span>
                        <span>{section.label}</span>
                      </a>
                    </li>
                  ))
                }
              </ul>
            </nav>

            <div
              class="border-accent-primary/15 bg-accent-primary/5 mt-5 rounded-xl border p-4"
            >
              <p
                class="text-accent-primary text-xs font-semibold tracking-[0.2em] uppercase"
              >
                Poslední aktualizace
              </p>
              <p class="mt-2 text-sm text-neutral-700">únor 2026</p>
              <div class="mt-4 space-y-2">
                <Button
                  type="button"
                  variant="primaryLight"
                  size="sm"
                  class="w-full"
                  onclick="window.CookieConsent && window.CookieConsent.showPreferences()"
                >
                  Nastavení cookies
                </Button>
                <Button
                  href="/kontakt"
                  variant="secondaryLight"
                  size="sm"
                  class="w-full"
                >
                  Kontaktovat nás
                </Button>
              </div>
            </div>
          </div>
        </aside>

        <div class="space-y-6" data-animate-section>
          <section
            id="spravce"
            class="rounded-2xl border border-neutral-200 bg-white p-6 shadow-sm md:p-8"
          >
            <div class="mb-4 flex items-center gap-3">
              <span
                class="bg-accent-primary h-2 w-2 rounded-full"
                aria-hidden="true"></span>
              <p
                class="text-accent-primary text-xs font-semibold tracking-[0.2em] uppercase"
              >
                Správce údajů
              </p>
            </div>
            <h2 class="font-sora text-2xl font-bold text-neutral-900">
              Kdo údaje zpracovává
            </h2>
            <p class="mt-3 leading-relaxed text-neutral-600">
              Správcem osobních údajů je <strong class="text-neutral-900"
                >{COMPANY.legalName}</strong
              >, IČO <strong class="text-neutral-900">{COMPANY.ico}</strong>, se
              sídlem
              <strong class="text-neutral-900">
                {COMPANY.address.streetAddress}, {COMPANY.address.postalCode}
                {COMPANY.address.addressLocality}
              </strong>.
            </p>
            <div class="mt-5 grid gap-3 sm:grid-cols-2">
              <a
                href={`mailto:${COMPANY.email}`}
                class="hover:border-accent-primary hover:text-accent-primary rounded-xl border border-neutral-200 bg-neutral-50 px-4 py-3 text-sm text-neutral-700 transition-colors"
              >
                E-mail: <span class="font-semibold">{COMPANY.email}</span>
              </a>
              <a
                href={`tel:${COMPANY.phoneHref}`}
                class="hover:border-accent-primary hover:text-accent-primary rounded-xl border border-neutral-200 bg-neutral-50 px-4 py-3 text-sm text-neutral-700 transition-colors"
              >
                Telefon: <span class="font-semibold"
                  >{COMPANY.phoneDisplay}</span
                >
              </a>
            </div>
          </section>

          <section
            id="rozsah"
            class="rounded-2xl border border-neutral-200 bg-white p-6 shadow-sm md:p-8"
          >
            <h2 class="font-sora text-2xl font-bold text-neutral-900">
              Jaké údaje zpracováváme
            </h2>
            <p class="mt-3 leading-relaxed text-neutral-600">
              Zpracováváme pouze údaje, které nám sami odešlete prostřednictvím
              kontaktního formuláře.
            </p>
            <div class="mt-5 grid gap-3 sm:grid-cols-2">
              <div class="rounded-xl border border-neutral-200 p-4">
                <p
                  class="text-xs font-semibold tracking-[0.2em] text-neutral-500 uppercase"
                >
                  Povinné údaje
                </p>
                <ul class="mt-3 space-y-2 text-sm text-neutral-700">
                  <li>Jméno a příjmení</li>
                  <li>E-mailová adresa</li>
                  <li>Typ služby</li>
                  <li>Lokalita</li>
                  <li>Obsah zprávy</li>
                </ul>
              </div>
              <div class="rounded-xl border border-neutral-200 p-4">
                <p
                  class="text-xs font-semibold tracking-[0.2em] text-neutral-500 uppercase"
                >
                  Volitelné údaje
                </p>
                <ul class="mt-3 space-y-2 text-sm text-neutral-700">
                  <li>Telefonní číslo</li>
                </ul>
                <p class="mt-4 text-sm leading-relaxed text-neutral-600">
                  Telefon je volitelný a slouží pouze pro rychlejší domluvu
                  termínu nebo doplnění detailů k poptávce.
                </p>
              </div>
            </div>
          </section>

          <section
            id="ucel"
            class="rounded-2xl border border-neutral-200 bg-white p-6 shadow-sm md:p-8"
          >
            <h2 class="font-sora text-2xl font-bold text-neutral-900">
              Účel zpracování a doba uchování
            </h2>
            <div class="mt-5 grid gap-4 md:grid-cols-2">
              <div
                class="rounded-xl border border-neutral-200 bg-neutral-50 p-4"
              >
                <p
                  class="text-xs font-semibold tracking-[0.2em] text-neutral-500 uppercase"
                >
                  Účel
                </p>
                <p class="mt-2 text-sm leading-relaxed text-neutral-700">
                  Odpověď na váš dotaz nebo poptávku, navazující komunikace a
                  domluva realizace služby.
                </p>
              </div>
              <div
                class="rounded-xl border border-neutral-200 bg-neutral-50 p-4"
              >
                <p
                  class="text-xs font-semibold tracking-[0.2em] text-neutral-500 uppercase"
                >
                  Doba uchování
                </p>
                <p class="mt-2 text-sm leading-relaxed text-neutral-700">
                  Po dobu nezbytnou k vyřízení vašeho požadavku, nejdéle však 1
                  rok od doručení zprávy, pokud zákon nevyžaduje delší uchování.
                </p>
              </div>
            </div>
            <p class="mt-4 leading-relaxed text-neutral-600">
              Údaje nepředáváme třetím stranám pro marketingové účely.
              Zpracování probíhá pouze v rozsahu nutném pro komunikaci a plnění
              našich služeb.
            </p>
          </section>

          <section
            id="prava"
            class="rounded-2xl border border-neutral-200 bg-white p-6 shadow-sm md:p-8"
          >
            <h2 class="font-sora text-2xl font-bold text-neutral-900">
              Vaše práva
            </h2>
            <p class="mt-3 leading-relaxed text-neutral-600">
              Máte právo požadovat přístup ke svým osobním údajům, jejich
              opravu, výmaz nebo omezení zpracování, vznést námitku a podat
              stížnost u Úřadu pro ochranu osobních údajů.
            </p>
            <div
              class="border-accent-primary/15 bg-accent-primary/5 mt-5 rounded-xl border p-4"
            >
              <p class="text-sm leading-relaxed text-neutral-700">
                Pokud chcete některé z práv uplatnit, napište nám na
                <a
                  href={`mailto:${COMPANY.email}`}
                  class="text-accent-primary font-semibold hover:underline"
                >
                  {COMPANY.email}
                </a>
                a zprávu vyřídíme bez zbytečného odkladu.
              </p>
            </div>
          </section>

          <section
            id="cookies"
            class="rounded-2xl border border-neutral-200 bg-white p-6 shadow-sm md:p-8"
          >
            <h2 class="font-sora text-2xl font-bold text-neutral-900">
              Cookies a analytika
            </h2>
            <p class="mt-3 leading-relaxed text-neutral-600">
              Používáme pouze nezbytné cookies a volitelné analytické cookies
              (Google Analytics 4). Analytika se aktivuje pouze po vašem
              souhlasu.
            </p>
            <div class="mt-5 grid gap-4 md:grid-cols-2">
              <div class="rounded-xl border border-neutral-200 p-4">
                <p
                  class="text-xs font-semibold tracking-[0.2em] text-neutral-500 uppercase"
                >
                  Nezbytné cookies
                </p>
                <p class="mt-2 text-sm leading-relaxed text-neutral-700">
                  Zajišťují správné fungování webu, například uložení volby
                  nastavení cookies.
                </p>
              </div>
              <div class="rounded-xl border border-neutral-200 p-4">
                <p
                  class="text-xs font-semibold tracking-[0.2em] text-neutral-500 uppercase"
                >
                  Analytické cookies
                </p>
                <p class="mt-2 text-sm leading-relaxed text-neutral-700">
                  Pomáhají nám anonymizovaně vyhodnocovat návštěvnost a
                  zlepšovat obsah webu.
                </p>
              </div>
            </div>
            <div class="mt-5 flex flex-wrap gap-3">
              <Button
                type="button"
                variant="primaryLight"
                onclick="window.CookieConsent && window.CookieConsent.showPreferences()"
              >
                Spravovat nastavení cookies
              </Button>
              <a
                href="https://policies.google.com/privacy"
                target="_blank"
                rel="noopener noreferrer"
                class="hover:border-accent-primary hover:text-accent-primary inline-flex items-center justify-center gap-2 rounded border border-neutral-200 bg-white px-4 py-3 text-sm font-medium text-neutral-800 transition-colors"
              >
                Zásady ochrany soukromí Google
              </a>
            </div>
          </section>

          <section
            id="kontakt"
            class="rounded-2xl border border-neutral-200 bg-white p-6 shadow-sm md:p-8"
          >
            <h2 class="font-sora text-2xl font-bold text-neutral-900">
              Kontakt a námitky
            </h2>
            <p class="mt-3 leading-relaxed text-neutral-600">
              Máte dotazy, požadavek na výmaz údajů nebo námitku ke zpracování?
              Napište nám e-mail nebo využijte kontaktní formulář na webu.
            </p>
            <div class="mt-5 grid gap-3 sm:grid-cols-2">
              <a
                href={`mailto:${COMPANY.email}`}
                class="hover:border-accent-primary hover:text-accent-primary rounded-xl border border-neutral-200 bg-neutral-50 px-4 py-3 text-sm text-neutral-700 transition-colors"
              >
                E-mail: <span class="font-semibold">{COMPANY.email}</span>
              </a>
              <a
                href="/kontakt"
                class="hover:border-accent-primary hover:text-accent-primary rounded-xl border border-neutral-200 bg-neutral-50 px-4 py-3 text-sm text-neutral-700 transition-colors"
              >
                Otevřít kontaktní stránku
              </a>
            </div>
          </section>
        </div>
      </div>
    </div>
  </SectionWrapper>
</BaseLayout>
